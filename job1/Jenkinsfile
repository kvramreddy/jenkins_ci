pipeline {
    agent none

    parameters {
        string(description: 'Git tag on which to base build', name: 'h4ciTag', defaultValue: '2.1.1.6.devel')
    }

    options {
      timestamps()
    }

    environment {
        GIT_LFS_SKIP_SMUDGE = '1'
        HOME = '/home/h4re1'
    }
    stages {
        stage('Update Dashboard') {
          agent {
            label 'el-7'
          }
          steps {
                  sh '''#!/bin/bash
                    echo $h4ciTag | grep -q -E '\\.devel$'
                    if [ $? -eq 0 ]; then
                      echo "DEV build"
                      rel_branch="release-$(echo $h4ciTag | cut -c1-6)x"
                      echo $rel_branch
                      mysql -hdashboard.tetrationanalytics.com dashboard_db -e "select * from cr_builds where tag='$h4ciTag';"
                    fi

                  '''
            }
        }
    }
}
